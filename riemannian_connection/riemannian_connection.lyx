\begin_layout Subsection
Riemannian connetion on Riemannian submanifolds
\end_layout

\begin_layout Proposition
Let 
\begin_inset Formula $M$
\end_inset

 be a Riemannian submanifold of a Riemannian manifold 
\begin_inset Formula $N$
\end_inset

, let 
\begin_inset Formula $P_{x}:\mathfrak{X}\left(N\right)\to\mathfrak{X}\left(M\right)$
\end_inset

 and 
\begin_inset Formula $\nabla^{M}$
\end_inset

 and 
\begin_inset Formula $\nabla^{N}$
\end_inset

 denote the Riemannian connections on 
\begin_inset Formula $M$
\end_inset

 and 
\begin_inset Formula $N$
\end_inset

 then 
\begin_inset Formula 
\[
\nabla_{X}^{M}Y=P_{x}\nabla_{X}^{N}Y
\]

\end_inset


\end_layout

\begin_layout Standard
It follows that when 
\begin_inset Formula $M$
\end_inset

 is a Riemannian submanifold of a Euclidean space, then 
\begin_inset Formula 
\begin{align*}
\nabla_{X}^{M}Y & =P_{x}\left(DY\left(x\right)\left[X_{x}\right]\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
for all 
\begin_inset Formula $X\in T_{x}M$
\end_inset

 and 
\begin_inset Formula $Y\in\mathfrak{X}\left(M\right)$
\end_inset

.
\end_layout

\begin_layout Section
SO3
\end_layout

\begin_layout Standard
In SO3 we have 
\begin_inset Formula 
\[
E_{1}=\begin{bmatrix}0 & 0 & 0\\
0 & 0 & -1\\
0 & 1 & 0
\end{bmatrix},E_{2}=\begin{bmatrix}0 & 0 & 1\\
0 & 0 & 0\\
-1 & 0 & 0
\end{bmatrix},E_{3}=\begin{bmatrix}0 & -1 & 0\\
1 & 0 & 0\\
0 & 0 & 0
\end{bmatrix}
\]

\end_inset

and 
\begin_inset Formula 
\begin{align*}
\nabla_{E_{1}}E_{1} & =\nabla_{E_{2}}E_{2}=\nabla_{E_{3}}E_{3}=0\\
\nabla_{E_{1}}E_{2} & =-\nabla_{E_{2}}E_{1}=\frac{1}{2}E_{3}\\
\nabla_{E_{1}}E_{3} & =-\nabla_{E_{3}}E_{1}=-\frac{1}{2}E_{2}\\
\nabla_{E_{2}}E_{3} & =-\nabla_{E_{3}}E_{2}=\frac{1}{2}E_{1}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\eta=E_{1}+E_{2}+E_{3}$
\end_inset

 and 
\begin_inset Formula $\xi=\xi^{1}E_{1}+\xi^{2}E_{2}+\xi^{3}E_{3}$
\end_inset

 and using the formula
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\nabla_{\eta}\xi & =\sum_{i,j}\left(\eta^{i}\xi^{j}\nabla_{E_{i}}E_{j}+\eta^{i}\partial_{i}\xi^{j}E_{j}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We can expand the term 
\begin_inset Formula $\sum_{i,j}\eta^{i}\xi^{j}\nabla_{E_{i}}E_{j}$
\end_inset

 and get 
\begin_inset Formula 
\begin{align*}
\sum_{i,j}\eta^{i}\xi^{j}\nabla_{E_{i}}E_{j} & =\eta^{1}\xi^{1}\nabla_{E_{1}}E_{1}+\eta^{1}\xi^{2}\nabla_{E_{1}}E_{2}+\eta^{1}\xi^{3}\nabla_{E_{1}}E_{3}\\
 & +\eta^{2}\xi^{1}\nabla_{E_{2}}E_{1}+\eta^{2}\xi^{2}\nabla_{E_{2}}E_{2}+\eta^{2}\xi^{3}\nabla_{E_{2}}E_{3}\\
 & +\eta^{3}\xi^{1}\nabla_{E_{3}}E_{1}+\eta^{3}\xi^{2}\nabla_{E_{3}}E_{2}+\eta^{3}\xi^{3}\nabla_{E_{3}}E_{3}\\
 & =\frac{1}{2}\left(\eta^{1}\xi^{2}E_{3}-\eta^{2}\xi^{1}E_{3}-\eta^{1}\xi^{3}E_{2}+\eta^{3}\xi^{1}E_{2}+\eta^{2}\xi^{3}E_{1}-\eta^{3}\xi^{2}E_{1}\right)\\
 & =\frac{1}{2}\begin{bmatrix}0 & \xi^{3} & -\xi^{2}\\
-\xi^{3} & 0 & \xi^{1}\\
\xi^{2} & -\xi^{1} & 0
\end{bmatrix}\begin{bmatrix}\eta_{1}\\
\eta_{2}\\
\eta_{3}
\end{bmatrix}\\
 & =-\left[\xi\right]_{\times}\eta
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
expanding out the left hand side we get 
\begin_inset Formula 
\begin{align*}
\sum_{i,j}\eta^{i}\partial_{i}\xi^{j}E_{j} & =\begin{bmatrix}\partial_{1}\xi^{1} & \partial_{2}\xi^{1} & \partial_{3}\xi^{1}\\
\partial_{1}\xi^{2} & \partial_{2}\xi^{2} & \partial_{3}\xi^{2}\\
\partial_{1}\xi^{3} & \partial_{2}\xi^{3} & \partial_{3}\xi^{3}
\end{bmatrix}\eta\\
 & =H\eta
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $H$
\end_inset

 is the typical Hessian.
 Together we get 
\begin_inset Formula 
\begin{align*}
\nabla_{\eta}\xi & =-\left[\xi\right]_{\times}\eta+H\eta\\
 & =\left(-\left[\xi\right]_{\times}+H\right)\eta
\end{align*}

\end_inset


\end_layout

