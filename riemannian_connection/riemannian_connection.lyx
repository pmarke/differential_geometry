\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\mathfrak{X}\left(M\right)$
\end_inset

 denote the set of smooth vector fields on 
\begin_inset Formula $M$
\end_inset

.
 An affine connection 
\begin_inset Formula $\nabla$
\end_inset

 is a mapping 
\begin_inset Formula $\nabla:\mathfrak{X}\left(M\right)\times\mathfrak{X}\left(M\right)\to\mathfrak{X}\left(M\right)$
\end_inset

 with the following properties and 
\begin_inset Formula $\mathfrak{F}\left(M\right)$
\end_inset

 be the set of smooth real valued functions 
\begin_inset Formula $\mathfrak{F}\left(M\right):M\to\mathbb{R}$
\end_inset

.
 
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\mathfrak{F}\left(M\right)$
\end_inset

-linearity in 
\begin_inset Formula $\eta$
\end_inset

: 
\begin_inset Formula $\nabla_{f\eta+g\chi}\xi=f\nabla_{\eta}\xi+g\nabla_{\chi}\xi$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\mathbb{R}$
\end_inset

-linearity in 
\begin_inset Formula $\xi$
\end_inset

: 
\begin_inset Formula $\nabla_{\eta}\left(a\xi+b\zeta\right)=a\nabla_{\eta}\xi+b\nabla_{\eta}\zeta$
\end_inset


\end_layout

\begin_layout Enumerate
Product rule 
\begin_inset Formula $\nabla_{\eta}\left(f\xi\right)=\left(\eta f\right)\xi+f\nabla_{\eta}\xi$
\end_inset


\end_layout

\begin_layout Standard
A connection in local coordinates can be written as 
\begin_inset Formula 
\[
\nabla_{\eta}\xi=\sum_{i,j}\left(\eta^{i}\xi^{j}\nabla_{E_{i}}E_{j}+\eta^{i}\partial_{i}\xi^{j}E_{j}\right)
\]

\end_inset


\end_layout

